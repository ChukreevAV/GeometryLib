@page
@using System.Globalization
@model WebApplication1.Pages.Test1Model
@{
}

<div class="text-center">
    <p>Случайные точки</p>
</div>

<form method="post">
    <button >New Points</button>
</form>

<table>
    <tr>
        <th scope="col">
            <table class="table mt-5">
                <thead>
                    <tr>
                        <th scope="col">X</th>
                        <th scope="col">Y</th>
                    </tr>
                </thead>
                @foreach (var pizza in Model.Points)
                {
                    <tr id=@($"tr{@pizza.GetHashCode()}") onclick="selectPoint(@pizza.GetHashCode())">
                        <td>@pizza.X.ToString("F4", CultureInfo.InvariantCulture)</td>
                        <td>@pizza.Y.ToString("F4", CultureInfo.InvariantCulture)</td>
                    </tr>
                }
            </table>
        </th>
        <th>
            <svg width="600" viewBox="0 0 1 1" xmlns="http://www.w3.org/2000/svg">

                @foreach (var pizza in Model.Points)
                {
                    <circle id=@($"cir{@pizza.GetHashCode()}")
                            cx=@pizza.X.ToString(CultureInfo.InvariantCulture) 
                            cy=@pizza.Y.ToString(CultureInfo.InvariantCulture)
                            r="0.005" onclick="selectPoint(@pizza.GetHashCode())" fill="blue" />
                }

            </svg>
        </th>
    </tr>
</table>